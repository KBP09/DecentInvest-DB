generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String           @id @default(uuid()) @db.Uuid
  email             String           @unique
  password          String
  role              Role?
  createdAt         DateTime         @default(now())
  startups          Startup[]        @relation("StartupOwner")
  ceoProfile        CEOProfile?
  investorProfile   InvestorProfile?
  otp               Int              @default(0)
  isFirstLogin      Boolean          @default(true)
  isProfileComplete Boolean          @default(false)
}

model Startup {
  id           String       @id @default(uuid()) @db.Uuid
  name         String
  ceoName      String
  description  String
  fundingGoal  Float
  websiteLink  String
  companySize  Int
  otherFounder String?
  originatedOn DateTime?
  whitePaper   String
  youtubeLink  String
  logoLink     String       @default("")
  metaDataLink String       @default("")
  createdAt    DateTime     @default(now())
  ownerId      String       @db.Uuid
  owner        User         @relation("StartupOwner", fields: [ownerId], references: [id])
  investments  Investment[]
  NFT          NFT[]
}

model NFT {
  id          String   @id @default(uuid()) @db.Uuid
  startupId   String   @unique @db.Uuid
  startup     Startup  @relation(fields: [startupId], references: [id])
  tokenId     Int      @unique @default(autoincrement())
  imageCID    String
  metadataCID String?
  owner       String?
  txHash      String?
  createdAt   DateTime @default(now())
  status      String   @default("pending")
}

model CEOProfile {
  id               String  @id @default(uuid()) @db.Uuid
  profilePicture   String?
  ceoName          String
  about            String
  birthday         String
  totalInvestments Float   @default(0)
  startupsCreated  Int     @default(0)
  userId           String  @unique @db.Uuid
  user             User    @relation(fields: [userId], references: [id])
  twitter          String  @default("")
  github           String  @default("")
  linkedin         String  @default("")
}

model InvestorProfile {
  id                  String       @id @default(uuid()) @db.Uuid
  profilePicture      String?
  investorName        String
  about               String
  birthday            DateTime
  totalAmountInvested Float        @default(0)
  startupsInvestedIn  Investment[]
  userId              String       @unique @db.Uuid
  user                User         @relation(fields: [userId], references: [id])
}

model Investment {
  id         String          @id @default(uuid()) @db.Uuid
  amount     Float
  startupId  String          @db.Uuid
  investorId String          @db.Uuid
  startup    Startup         @relation(fields: [startupId], references: [id])
  investor   InvestorProfile @relation(fields: [investorId], references: [id])
}

enum Role {
  INVESTOR
  STARTUP_OWNER
}

model Wallet {
  id           String    @id @default(uuid()) @db.Uuid
  email        String    @unique
  hashMnemonic String    @unique
  password     String
  account      Account[]
  createdAt    DateTime  @default(now())
}

model Account {
  id         String    @id @default(uuid()) @db.Uuid
  walletId   String    @db.Uuid
  address    String
  privateKey String
  Wallet     Wallet    @relation(fields: [walletId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  addresses  Address[]
}

model Address {
  id           String       @id @default(uuid()) @db.Uuid
  walletId     String       @db.Uuid
  address      String
  chainId      String
  currency     String
  currencyType CurrencyType
  balance      Float        @default(0)
  tokenAddress String
  createdAt    DateTime     @default(now())
  accountId    String       @db.Uuid
  Account      Account      @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

enum CurrencyType {
  TOKEN
  NATIVE
}

model TokenDetails {
  id           String @id @default(uuid()) @db.Uuid
  name         String
  symbol       String
  chainId      String
  tokenAddress String
  decimals     Int    @default(6)
  rpc_url      String @default("")
}

model Transaction {
  id              Int      @id @default(autoincrement())
  transactionHash String?  @unique
  fromAddress     String
  toAddress       String
  amount          Float    @default(0)
  currency        String
  totalTxnCost    Float    @default(0)
  chainId         String
  timeStamp       DateTime @default(now())
  confirmed       Boolean
  nonce           Int      @default(0)
  type            String   @default("")
}
